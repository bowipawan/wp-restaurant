%h1{:style=>"margin-bottom:50px"} Comment #{@restaurant.restaurant_name}

= simple_form_for @comment, url: submitcomment_path(@restaurant.restaurant_name), method: :post do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    %div
      = f.text_area :msg, required:true, style:"margin-bottom:20px;width:800px;height:100px", placeholder: "Write your comment ...", id:"msg"

  .form-actions
    = f.button :submit,'Comment', class:'btn btn-outline-success mt-2', action:'Comment'
    = link_to 'Back', showrestaurant_path(@restaurant.restaurant_name), class:'btn btn-outline-danger mt-2'
